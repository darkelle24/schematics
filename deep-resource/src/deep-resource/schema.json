{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "DeepResourceSchematic",
    "description": "Un schematic pour votre ressource profonde.",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Le nom de l'entité à générer."
        },
        "path": {
            "type": "string",
            "description": "Le chemin où générer l'entité.",
            "default": "my-new-path"
        },
        "file": {
            "type": "boolean",
            "description": "Indique si un fichier doit être géré par l'entité.",
            "default": false
        }
    },
    "required": [
        "name"
    ],
    "additionalProperties": false
}